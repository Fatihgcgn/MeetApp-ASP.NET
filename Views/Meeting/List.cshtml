@model List<UserInfo>
    @{
    ViewBag.Title = "Toplantıya Katılım Listesi";
    }
    <main class="text-center">
        <h1 class="h4">Toplantıya Katılım Listesi</h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td>Ad</td>
                    <td>Katılım Formu</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @{int i = 0;}

                @foreach(var user in Model)
                {
                var state = user.WillAttend == true ? "Evet":"Hayır";
                var className = user.WillAttend == true ? "table-success":"table-danger";

                if(user.WillAttend == true)
                {
                i++;
                }

                <tr class="@className">
                    <td>@user.Name</td>
                    <td>@state</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/meeting/details/@user.Id">Detay</a>
                    </td>
                </tr>
                }

            </tbody>
        </table>
        
        <div class="card">
            <div class="card-body">
                <span>Katılımcı sayısı : @i</span>
            </div>
        </div>
    </main>